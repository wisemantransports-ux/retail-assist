# Supabase
NEXT_PUBLIC_SUPABASE_URL=123456
NEXT_PUBLIC_SUPABASE_ANON_KEY=123456

# Mock Mode (set to 'true' for demo, 'false' for production with real Supabase)
NEXT_PUBLIC_USE_MOCK_SUPABASE=false

#SUPER_ADMIN_EMAIL=admin@retailassist.com

# OpenAI (server-side only)
OPENAI_API_KEY=sk-your-key-here

# Meta/Facebook (server-side only)
META_PAGE_ACCESS_TOKEN=your-token-here
META_VERIFY_TOKEN=your-verify-token

# Supabase Service Role (server-side only, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=123456

# App Environment
NODE_ENV=production

# Test Mode
NEXT_PUBLIC_TEST_MODE=false

