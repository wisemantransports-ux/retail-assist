{
  "name": "retail-assist-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18 <=20"
  },
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3000",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 5000",
    "lint": "eslint",
    "test:supabase": "node scripts/supabase-policy-test.js",
    "test:invite-flow": "TEST_AUTH_TOKEN=\"$TEST_AUTH_TOKEN\" npx ts-node -r tsconfig-paths/register test-employee-invite-flow.ts",
    "test:invite-flow:safe": "npx ts-node -r tsconfig-paths/register scripts/run-safe-invite-test.ts",
    "test:invite-flow:safe:watch": "nodemon --exec 'npm run test:invite-flow:safe' --watch test-employee-invite-flow.ts --watch scripts/run-safe-invite-test.ts",
    "test:invite-acceptance:v1": "npx ts-node -r tsconfig-paths/register test-invite-acceptance-flow-v1.ts",
    "test:invite-acceptance:verify": "npx ts-node -r tsconfig-paths/register test-invite-acceptance-verify.ts",
    "provision:users": "node -r ts-node/register -r tsconfig-paths/register scripts/create-admin-users.ts"
  },
  "dependencies": {
    "@supabase/ssr": "^0.4.1",
    "@supabase/supabase-js": "^2.86.2",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.562.0",
    "next": "^16.0.7",
    "openai": "^4.104.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.14.7",
    "@tailwindcss/postcss": "^4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "playwright": "^1.37.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.9.3"
  }
}
