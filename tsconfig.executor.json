    "app/lib/webhooks/instagram-webhook.ts",
    "app/lib/webhooks/whatsapp-webhook.ts",
    "app/lib/webhooks/website-form-webhook.ts",
    "app/lib/automation/automation-shim.d.ts",
    "app/lib/webhooks/webhooks-shim.d.ts"
